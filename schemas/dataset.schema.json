{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "DatasetRegistryItem",
    "type": "object",
    "required": [
        "id",
        "name",
        "category",
        "path",
        "format",
        "source_url",
        "license"
    ],
    "properties": {
        "id": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$"
        },
        "name": {
            "type": "string"
        },
        "category": {
            "type": "string",
            "enum": [
                "competitions",
                "techniques",
                "athletes",
                "gyms",
                "physiology"
            ]
        },
        "path": {
            "type": "string"
        },
        "format": {
            "type": "string",
            "enum": [
                "csv",
                "json",
                "jsonl",
                "parquet"
            ]
        },
        "source_url": {
            "type": "string"
        },
        "license": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "updated_at": {
            "type": "string",
            "format": "date"
        },
        "columns": {
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    }
}